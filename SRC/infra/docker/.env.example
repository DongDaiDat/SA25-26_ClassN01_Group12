# ===== Monolith core DB =====
POSTGRES_CORE_DB=tpms_core
POSTGRES_CORE_USER=tpms
POSTGRES_CORE_PASSWORD=tpms
POSTGRES_CORE_HOST=postgres_core
POSTGRES_CORE_PORT=5432

# ===== Notification DB =====
POSTGRES_NOTIFICATION_DB=tpms_notification
POSTGRES_NOTIFICATION_USER=tpms
POSTGRES_NOTIFICATION_PASSWORD=tpms
POSTGRES_NOTIFICATION_HOST=postgres_notification
POSTGRES_NOTIFICATION_PORT=5432

# ===== Django core =====
DJANGO_SECRET_KEY=dev-secret-change-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=*
